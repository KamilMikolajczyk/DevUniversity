@page
@model University.Areas.Identity.Pages.Account.LoginModel
@{ ViewData["Title"] = "Logowanie"; }

<div class="card-soft p-4 p-lg-5">
    <h2 class="fw-bold mb-1">Zaloguj się</h2>
    <div class="text-muted2 mb-4">Witaj z powrotem.</div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label text-muted2">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label text-muted2">Hasło</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label text-muted2" asp-for="Input.RememberMe">Zapamiętaj mnie</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-light px-4">Zaloguj</button>
            <a class="btn btn-outline-light px-4" asp-page="./Register">Rejestracja</a>
        </div>
    </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
