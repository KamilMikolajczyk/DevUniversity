@{
    ViewData["Title"] = "Start";
}
<div class="card-soft p-4 p-lg-5">
    <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-4">
        <div>
            <h1 class="fw-bold mb-2">University Portal</h1>
            <p class="text-muted2 mb-4">Nowoczesny portal: logowanie, role, kalendarz i profile Student/Lecturer.</p>
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-light px-3" asp-controller="Calendar" asp-action="Index"><i class="bi bi-calendar3 me-1"></i> Otwórz kalendarz</a>
                <a class="btn btn-outline-light px-3" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right me-1"></i> Logowanie</a>
                <a class="btn btn-outline-light px-3" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus me-1"></i> Rejestracja</a>
            </div>
        </div>
        <div class="glass rounded-4 p-3 p-lg-4" style="min-width: 280px;">
            <div class="d-flex align-items-center gap-2 mb-2"><i class="bi bi-stars"></i><span class="fw-semibold">Co tu działa?</span></div>
            <div class="text-muted2 small">
                • Rejestracja i logowanie (Identity)<br/>
                • Role: Admin / Student / Lecturer<br/>
                • Kalendarz z filtrowaniem widoczności<br/>
                • Profile domenowe tworzone przy rejestracji
            </div>
        </div>
    </div>
</div>
